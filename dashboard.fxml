                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="startRepairButton" text="â–¶ ÃŽncepe Lucrul" onAction="#startRepair" styleClass="button-primary"/>
                    <Button fx:id="completeRepairButton" text="âœ“ FinalizeazÄƒ ReparaÈ›ia" onAction="#completeRepair" styleClass="button-success"/>
                </HBox>
            </VBox>

            <!-- BUTOANE ACTIUNI -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label fx:id="statusLabel" HBox.hgrow="ALWAYS" style="-fx-font-size:12; -fx-font-weight:bold;"/>
                
                <!-- Butoane Admin -->
                <Button fx:id="addDroneButton" text="+ Adauga Drona" onAction="#addDrone" styleClass="button" />
                <Button fx:id="setMaintenanceButton" text="ðŸ”§ Trimite in Service" onAction="#setMaintenance" styleClass="button" style="-fx-background-color: #f39c12; -fx-text-fill:white;"/>
                <Button fx:id="removeDroneButton" text="âœ— Sterge Drona" onAction="#removeDrone" styleClass="button-danger" />
                
                <!-- Buton Scoate din MentenanÈ›Äƒ (Admin) -->
                <Button fx:id="removeMaintenanceButton" text="âœ“ Scoate din Mentenanta" onAction="#removeMaintenance" styleClass="button-success" visible="false" managed="false"/>
                
                <Region prefWidth="20"/>
                
                <!-- Buton Planificare/Creare Cerere (Admin/Operator) -->
                <Button fx:id="openMapButton" text="ðŸ—ºï¸ Planifica Misiune" onAction="#openMap" styleClass="button-success" style="-fx-font-size:14px; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
